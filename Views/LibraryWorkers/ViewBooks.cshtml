@model BibliotekosValdymoSistema.Models.LibraryWorker

<h2>Assigned Books for @Model.User.FirstName @Model.User.LastName</h2>


@if (Model.Books != null && Model.Books.Any())
{
    <table class="table table-bordered table-striped text-center" style="width: 80%; margin: 0 auto;">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Published Year</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.PublishedYear</td>
                    <td>
                        <form asp-action="RemoveBook" method="post" style="display:inline;">
                            <input type="hidden" name="workerId" value="@Model.Id" />
                            <input type="hidden" name="bookId" value="@book.Id" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No books assigned to this worker.</p>
}


<div class="text-center mt-3">
    <a asp-controller="LibraryWorkers" asp-action="Index" class="btn btn-dark">
        Go Back
    </a>
</div></>
 